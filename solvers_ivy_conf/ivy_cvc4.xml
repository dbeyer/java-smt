<ivy-module version="2.0"
    xmlns:e="http://ant.apache.org/ivy/extra"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
    <info organisation="org.sosy_lab" module="javasmt-solver-cvc4">
      <license name="Modified BSD License" url="https://github.com/CVC4/CVC4/blob/master/COPYING"/>
        <description>
            CVC4 solver and JavaSMT JNI wrapper.
            CVC4 is provided under a modified BSD License.
        </description>
    </info>

    <configurations>
        <conf name="solver-cvc4" />
    </configurations>

    <publications defaultconf="solver-cvc4">
        <artifact name="libcvc4jni"    conf="solver-cvc4" type="shared-object" ext="so"/>
        <artifact name="libcvc4"       conf="solver-cvc4" type="shared-object" ext="so"/>
        <artifact name="libcvc4parser" conf="solver-cvc4" type="shared-object" ext="so"/>
        <artifact name="CVC4" conf="solver-cvc4" />
    </publications>

    <dependencies></dependencies>

</ivy-module>
